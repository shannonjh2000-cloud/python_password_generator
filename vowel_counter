# Create a list called vowels
vowels = ["a", "e", "i", "o", "u"]

# Write your function to count vowels in words
def vowel_counter(s):
  count = 0
  for letter in s:
    if letter in vowels:
      count += 1
  return count

# Print the number of vowels in the word 'hello'
print(vowel_counter("hello"))
